    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Example (CodeLLDB)",
            "program": "${workspaceFolder}/clib/example/example.out",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "clib:example:build"
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Debug Example (Native Debug)",
            "target": "${workspaceFolder}/clib/example/example.out",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "clib:example:build"
        },
        {
            "name": "Generate Bindings",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/genlib",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Run Demos",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/demos",
            "cwd": "${workspaceFolder}",
        }
    ]
}